<body>

  <div class="calculator">
    <h2>Bet Calculator</h2>

    <p>Total Sum:</p>
    <input type="number" id="sum" placeholder="Enter total sum" />
    <button class="calc-btn" onclick="solve()">Calculate</button>

    <h3>2x Based Calculation</h3>
    <div id="output2x"></div>

    <h3>3x Based Calculation</h3>
    <div id="output3x"></div>
  </div>

  <script>
    function calculateBets(totalSum, n, r) {
      var baseBet = totalSum / ((Math.pow(r, n) - 1) / (r - 1));
      if (!isFinite(baseBet) || totalSum <= 0) return null;

      var bets = [];
      var total = 0;
      for (var i = 0; i < n; i++) {
        var bet = Math.round(baseBet * Math.pow(r, i));
        bets.push(bet);
        total += bet;
      }
      return { bets: bets, total: total };
    }

    function solve() {
      var S = parseFloat(document.getElementById('sum').value);
      var n = 6; // Updated from 5 to 6 steps

      var result2x = calculateBets(S, n, 2);
      var result3x = calculateBets(S, n, 3);

      if (!result2x || !result3x) {
        document.getElementById('output2x').innerHTML = "Invalid input!";
        document.getElementById('output3x').innerHTML = "";
        return;
      }

      var out2x = "";
      result2x.bets.forEach((bet, i) => {
        out2x += (i + 1) + ". Bet: " + bet + " Taka<br>";
      });
      out2x += "<br><strong>Total:</strong> " + result2x.total + " Taka";
      document.getElementById('output2x').innerHTML = out2x;

      var out3x = "";
      result3x.bets.forEach((bet, i) => {
        out3x += (i + 1) + ". Bet: " + bet + " Taka<br>";
      });
      out3x += "<br><strong>Total:</strong> " + result3x.total + " Taka";
      document.getElementById('output3x').innerHTML = out3x;
    }
  </script>

